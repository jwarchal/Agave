	public function getPDOConstantType( $var )
        {
          if( is_int( $var ) )
            return PDO::PARAM_INT;
          if( is_bool( $var ) )
            return PDO::PARAM_BOOL;
          if( is_null( $var ) )
            return PDO::PARAM_NULL;
          //Default
          return PDO::PARAM_STR;
        }
