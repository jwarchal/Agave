<?php
function user_panel_login($args=null) {
	global $agave;
	$user = $agave->user;

	if($user->isAnon) {
		$fm = $agave->load('fieldManager');

		$elements = array();
		$elements[] = array(
			'name'=>'login',
			'label'=>'Login',
			'type'=>'text'
		);
		$elements[] = array(
			'name'=>'password',
			'label'=>'Password',
			'type'=>'password'
		);
		$content = $fm->startForm($agave->url."user/login", "post");
		$content .= $fm->generateElements($elements);
		$content .= $fm->endForm("Login");
		$content .= "
			<small>
				<ul>
					<li><a href='".$agave->url."user/register'>Register for site</a></li>
					<li><a href='".$agave->url."user/recover-password'>Forgot your password?</a></li>
				</ul>
			</small>
		";
	}
	else {
		$t = $agave->load('themer');
		$content = "<h3>Hello $user->firstName!</h3>";
		$content .= $t->returnMenu('user');
		if($user->access('administer_site')) {
			$content .= "<h3>Admin Menu</h3>";
			$content .= $t->returnMenu('admin');
		}
	}
	
	return $content;
}
